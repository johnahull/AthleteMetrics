{
  "name": "@athletemetrics/root",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsx packages/api/index.ts",
    "build": "npm run build -w @athletemetrics/web && npm run build -w @athletemetrics/api",
    "prestart": "node scripts/run-migrations.js",
    "start": "node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node scripts/run-migrations.js",
    "db:migrate:backfill-org": "tsx scripts/migrations/backfill-measurement-organization-id.js",
    "db:validate": "node scripts/validate-migrations.js",
    "test": "NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=${TEST_HEAP_SIZE:-4096}\" vitest",
    "test:ui": "NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=${TEST_HEAP_SIZE:-4096}\" vitest --ui",
    "test:run": "NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=${TEST_HEAP_SIZE:-4096}\" vitest run",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=${TEST_HEAP_SIZE:-4096}\" vitest run --config vitest.unit.config.ts",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=${TEST_HEAP_SIZE:-4096}\" vitest run --config vitest.integration.config.ts",
    "test:staging": "playwright test --config=playwright.staging.config.ts",
    "test:staging:validate": "playwright test tests/e2e/validate-staging.spec.ts --config=playwright.staging.config.ts",
    "deploy:testing": "node scripts/validate-testing-env.js && railway up --environment testing --service athletemetrics-testing",
    "logs:testing": "railway logs --environment testing",
    "shell:testing": "railway run --environment testing bash",
    "vars:testing": "railway variables --environment testing"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@replit/vite-plugin-cartographer": "^0.3.2",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.5",
    "esbuild": "^0.25.0",
    "happy-dom": "^20.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.47",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3",
    "vite": "^7.1.9",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
