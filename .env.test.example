# Test Environment Configuration
# Copy this file to .env.test and modify for your local test setup
# NEVER commit .env.test to version control!

# Database for integration tests
# IMPORTANT: Must use a separate test database - NEVER use production or staging!
DATABASE_URL=postgresql://localhost:5432/athletemetrics_test

# Environment
NODE_ENV=test

# Session configuration for tests
SESSION_SECRET=test-secret-only-do-not-use-in-production

# Admin credentials for test initialization
# These are only used in test environments
ADMIN_USER=test-admin
ADMIN_PASSWORD=TestPassword123!
ADMIN_EMAIL=admin@test.local

# Optional: Disable rate limiting in tests
# ⚠️ NEVER SET THESE TO true IN PRODUCTION! ⚠️
# These bypass security controls and are automatically disabled when NODE_ENV=production
# Only use these in test environments to prevent rate limiting during test execution
BYPASS_ANALYTICS_RATE_LIMIT=true
BYPASS_GENERAL_RATE_LIMIT=true

# Optional: Allow privilege restoration in tests
ALLOW_ADMIN_PRIVILEGE_RESTORE=true
