# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/athlete_performance"

# For development, you can use SQLite:
# DATABASE_URL="file:./dev.db"

# Authentication
ADMIN_USER="admin"
ADMIN_PASS="password"

# Session Secret (change this in production)
SESSION_SECRET="your-session-secret-here"

# Environment
NODE_ENV="development"

# Server Port (default: 5000)
PORT=5000

# Email Service (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="AthleteMetrics"

# Application URL (used for generating invitation links)
APP_URL="http://localhost:5000"

# Invitation Settings
INVITATION_EXPIRY_DAYS=7

# Optional: For deployment on platforms like Heroku
# PGHOST="localhost"
# PGPORT=5432
# PGDATABASE="athlete_performance"
# PGUSER="username"
# PGPASSWORD="password"
