# =============================================================================
# AthleteMetrics Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV="development"  # Options: development, production, test

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=5000  # Server port (default: 5000)

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://username:password@localhost:5432/athlete_performance"

# For development, you can use SQLite:
# DATABASE_URL="file:./dev.db"

# Optional: For deployment on platforms like Heroku
# PGHOST="localhost"
# PGPORT=5432
# PGDATABASE="athlete_performance"
# PGUSER="username"
# PGPASSWORD="password"

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# IMPORTANT: Change these values in production!

# Admin credentials (min 3 chars for user, min 12 chars for password)
ADMIN_USER="admin"
ADMIN_PASS="change-this-password-in-production"

# Session secret (MUST be at least 32 characters, 64+ recommended for production)
SESSION_SECRET="change-this-to-a-random-32-character-string-minimum"

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
# Analytics API rate limiting
ANALYTICS_RATE_WINDOW_MS=900000  # Time window in milliseconds (default: 900000 = 15 minutes)
ANALYTICS_RATE_LIMIT=50  # Maximum requests per window (default: 50)
ANALYTICS_RATE_LIMIT_MESSAGE="Too many analytics requests, please try again later."

# Rate limiting bypasses (DEVELOPMENT ONLY - automatically disabled in production)
BYPASS_ANALYTICS_RATE_LIMIT=false  # Bypass analytics rate limiting for site admins
BYPASS_GENERAL_RATE_LIMIT=false    # Bypass general API rate limiting

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="info"  # Options: debug, info, warn, error (default: info)

# -----------------------------------------------------------------------------
# Optional Services
# -----------------------------------------------------------------------------
# Email service (SendGrid)
# SENDGRID_API_KEY="your-sendgrid-api-key-here"

# Session storage (Redis - optional)
# REDIS_URL="redis://localhost:6379"
